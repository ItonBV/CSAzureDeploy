{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "CustomerName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 15,
      "metadata": {
        "description": "The long name (15 char max) for this customer. Used for prefixes on objects/resources"
      }
    },
    "CustomerShort": {
      "type": "string",
      "minLength": 2,
      "maxLength": 6,
      "metadata": {
        "description": "The short name (6 char max) for this customer. Used for prefixes on objects/resources"
      }
    },
    "VNetCIDR": {
      "type": "string",
      "defaultValue": "172.16.0.0/23",
      "metadata": {
        "description": "CIDR based virtual network definition for this solution. Defaults to 23 mask bits"
      }
    },
    "FWSubnetCIDR": {
      "type": "string",
      "defaultValue": "172.16.0.0/29",
      "metadata": {
        "description": "CIDR based virtual network definition for this solution. Defaults to 23 mask bits"
      }
    },
    "GWSubnetCIDR": {
      "type": "string",
      "defaultValue": "172.16.0.8/29",
      "metadata": {
        "description": "CIDR based virtual network definition for this solution. Defaults to 23 mask bits"
      }
    },
    "DMZSubnetCIDR": {
      "type": "string",
      "defaultValue": "172.16.0.128/25",
      "metadata": {
        "description": "CIDR based virtual network definition for this solution. Defaults to 23 mask bits"
      }
    },
    "LANSubnetCIDR": {
      "type": "string",
      "defaultValue": "172.16.1.0/24",
      "metadata": {
        "description": "CIDR based virtual network definition for this solution. Defaults to 23 mask bits"
      }
    },
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring"
    }
  },
  "variables": {
    "VNetName": "[concat(parameters('CustomerShort'),'-CS-CD-VNet1')]",
    "FWSubnetName": "[concat(parameters('CustomerShort'),'-CS-CD-FW')]",
    "GWSubnetName": "[concat(parameters('CustomerShort'),'-CS-CD-GW')]",
    "DMZSubnetName": "[concat(parameters('CustomerShort'),'-CS-CD-DMZ')]",
    "LANSubnetName": "[concat(parameters('CustomerShort'),'-CS-CD-LAN')]",
    "NestedTemplatesFolder": "nestedtemplates",
    "LanNsgTemplateFileName": "nestedtemplates/LanNsg.json",
    "LanNsgTemplateParametersFileName": "LanNsg.parameters.json",
    "DmzNsgTemplateFileName": "nestedtemplates/DmzNsg.json",
    "DmzNsgTemplateParametersFileName": "DmzNsg.parameters.json",
    "Test" : "[concat(variables('NestedTemplatesFolder'), '/', variables('DmzNsgTemplateFileName'))]"
  },
  "resources": [
    {
      "name": "LanNsg",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().templateLink.uri, variables('LanNsgTemplateFileName'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "CustomerShort": {
            "value": "[parameters('CustomerShort')]"
          }            
        }
      }
    },
    {
      "name": "DmzNsg",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().templateLink.uri, variables('DmzNsgTemplateFileName'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "CustomerShort": {
            "value": "[parameters('CustomerShort')]"
          }
        }
      }
    },
    {
      "name": "[variables('VNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-06-01",
      "dependsOn": [
        "DmzNsg",
        "LanNsg"
      ],
      "tags": {
        "displayName": "Virtual network for [parameters('CustomerName')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNetCIDR')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('FWSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('FWSubnetCIDR')]"
            }
          },
          {
            "name": "[variables('GWSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('GWSubnetCIDR')]"
            }
          },
          {
            "name": "[variables('DMZSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('DMZSubnetCIDR')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', reference('DmzNsg').outputs.Name.value)]"
              }
            }
          },
          {
            "name": "[variables('LANSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('LANSubnetCIDR')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', reference('LanNsg').outputs.Name.value)]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
